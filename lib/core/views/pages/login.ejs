    <div class="wrapper fadeInDown">
        <div id="formContent">
          <!-- Tabs Titles -->
      
          <!-- Icon -->
          <div class="fadeIn first">
            <!-- <img src="https://img.icons8.com/pastel-glyph/2x/user-lock.png" id="icon" alt="User Icon" /> -->
          </div>
      
          <!-- Login Form -->
          <form action="/login">
            <!-- <input type="text" id="name" class="fadeIn second" name="login" placeholder="name"> -->
            <input type="text" id="password" class="fadeIn third" name="login" placeholder="password">
            <input type="submit" class="fadeIn fourth" value="Log In" id="login">
          </form>
          
        </div>
      </div>

    <script type="text/javascript">
        $('#login').click(function (evt) {
            evt.preventDefault();
            $.ajax({
                url: './login',
                type: 'POST',
                data: {
                    //name: $('#name').val(),
                    password: $('#password').val()
                },
                success: function (data) {
                    if (data.code === 0) {
                        location.href = "<%= path %>"
                    }
                }
            });
        });
    </script>

</body>

</html>